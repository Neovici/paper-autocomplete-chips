{
	"plugins": {
		"local": {
      "browsers": ["chrome"],
      "browserOptions": {
          "chrome": [
              "headless",
              "disable-gpu",
              "no-sandbox"
          ],
          "firefox": [
              "--headless"
          ]
      }
		},
		"istanbul": {
      "dir": "./coverage",
      "reporters": ["text-summary", "lcov"],
      "include": [
        "**/paper-*.js"
      ],
      "exclude": []
    },
    "sauce": {
      "browsers": [{
        "browserName": "microsoftedge",
        "platform": "Windows 10",
        "version": ""
      }, {
        "browserName": "chrome",
        "platform": "Windows 10",
        "version": "latest"
      }, {
        "browserName": "firefox",
        "platform": "Windows 10",
        "version": ""
      }, {
        "browserName": "safari",
        "platform": "macOS 10.13",
        "version": "11.1"
      }]
    }
	}
}
